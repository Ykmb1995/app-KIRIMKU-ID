{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@adapters/*": ["packages/adapters/*"],
      "@core/*": ["packages/core/*"],
      "@notification/*": ["packages/notification/*"],
      "@label/*": ["packages/label/*"]
    }
  }
}
